<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=camp._id%>/edit?_method=PATCH" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="my-3">
                <label class="label form-label" for="title">Title: </label>
                <input class="form-control" type="text" name="title" id="title" value="<%=camp.title%>" required>
            </div>
            <div class=" my-3">
                <label class="label form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="location" id="location" value="<%=camp.location%>"
                    required>
            </div>
            <div class="my-3">
                <label class="label form-label" for="price">Price: </label>
                <input class="form-control" type="number" step="any" name="price" id="price" value="<%=camp.price%>"
                    required>
            </div>
            <div class=" my-3">
                <label class="label form-label" for="description">description: </label>
                <textarea class="form-control" name="description" id="decription" cols="30" rows="5" required>
                    <%=camp.description%>
                </textarea>
            </div>
            <div>
                <label for="image" class="form-label">Add images:</label>
                <input class="form-control" type="file" name="image" id="image" multiple>
            </div>
            <% if(camp.images.length){ %>
            <label for="images">Delete Images:</label>
            <div class="mb-3">
                <% camp.images.forEach((img, i) => {%>
                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                    <label for="image-<%=i%>">Delete</label>
                </div>
                <%});%>
            </div>
            <%}%>
            <button class=" btn btn-success">Submit</button>
            <a href="/campgrounds/<%=camp._id%>/show" class="btn btn-danger my-3">Cancel</a>
        </form>
    </div>
</div>