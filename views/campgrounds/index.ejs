<% layout('layouts/boilerplate') %>

<div style="width: 100%; height: 300px;" id="map"></div>
<h1>All Campgrounds</h1>
<% for(let camp of campgrounds) {%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= camp.images.length ? camp.images[0].url : '' %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title%></h5>
                <p class="card-text"><%=camp.description%></p>
                <p><small class="text-muted"><%=camp.location%></small></p>
                <a href="/campgrounds/<%=camp._id%>/show" class="btn btn-primary">Details</a>
            </div>
        </div>
    </div>
</div>
<%}%>
